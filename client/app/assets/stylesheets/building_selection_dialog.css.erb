/* == BUILDING SELECTION ==*/

.modal-dialog-body.modal-dialog-building-selection{
  top: 55px;
  height: 420px;
  width: 100%;
}

.building-selection-cell
{
  width: 100%;
}

.building-selection-resource-cell
{
  width: 64px;
  height: 18px;
  display: inline-block;
  position: relative;
  float: left;
  bottom: 38px;
  left: 20px;
  top: -26px
}

.building-selection-resource-cell .count-text
{
  font-size: 14px;
  color: white;
  width: auto;
  bottom: 2px;
  left: 18px;
  position: relative;
}

.building-option-details.same.building-option-details-new-view
{
  width: 27%;
  height: 150px;
  position: relative;
  float: left;
  display: inline-block;
  padding-left: 34px;
  padding-top: 34px;
}

.building-option-details.building-option-details-new-view
{
  width: 27%;
  height: 150px;
  position: relative;
  float: left;
  display: inline-block;
  margin-left: 30px;
  margin-bottom: 30px;
}

.building-background
{
  background:url("<%= asset_path 'dialogs/backgrounds/background_building_selection_disabled.png' %>") no-repeat center center;
  width: 164px;
  height: 148px;
  cursor: pointer;
}

.is-construction-possible.building-background
{
  background:url("<%= asset_path 'dialogs/backgrounds/background_building_selection.png' %>") no-repeat center center;
}

.is-construction-possible.building-background:hover
{
  background:url("<%= asset_path 'dialogs/backgrounds/background_building_selection_active.png' %>") no-repeat center center;
}

.building-background:active
{
  opacity: 0.7;
  filter: alpha(opacity=70);
}

.building-selection-cell .building-position
{
  position: relative;
  top: -22px;
}

.building-info-button
{
  position: relative;
  left: 145px;
  top: 33px;
  color: white;
  text-align: center;
  z-index: +5;
  cursor: pointer;
}

.building-info-button:active
{
  opacity: 0.7;
  filter: alpha(opacity=70);
}