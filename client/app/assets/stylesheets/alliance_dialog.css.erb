.alliance-container {
  position: absolute;
  top: 120px;
}

.alliance-container h3 {
  position: relative;
  top: 0;
  left: 0;
  -webkit-margin-before: 0;
  -webkit-margin-after: 0.5em;
  font-size: 0.9em;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
}

.alliance-container h4 {
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  position: relative;
  color: rgb(150, 150, 150);
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  font-size: 0.7em;
}

.alliance-banner {
  margin: 20px 0px 10px 40px;
  float:left;
  position: relative;
}

.alliance-about {
  float: left;
  width: 60%;
  margin: 10px 0 0 40px;
  position: relative;
}

.alliance-information, .alliance-management {
  margin: 0 0 0 10px;
}

.alliance-invite-link {
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  font-family: 'Montserrat' sans-serif;
  font-size: 0.5em;
  word-wrap: break-word;
}

.alliance-slogan, .alliance-accept {
  width: 40%;
  position: relative;
  float: left;
}

.alliance-slogan input[type="text"] {
  width: 80%;
  border: none;
  text-align: center;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  color: rgb(95, 95, 95);
  font-size: 0.7em;
}

.alliance-text {
  float: left;
  vertical-align: bottom;
  padding: 15px 0 0 40px;
  width: 85%;
  color: #735e3b;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  font-size: 0.7em;
}

.alliance-join-button {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: pointer;
  display: inline-block;
  width: 308px;
  height: 52px;
  line-height: 52px;
  letter-spacing: 0.1em;
  text-align: center;
  font-size: 20px;
  color: white;
  background:url("<%= asset_path 'dialogs/buttons/button_green_wide.png' %>") no-repeat center center;
}

.alliance-toggle {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: pointer;
  font-size: 0.7em;
  text-align: center;
  float: left;
  width: 54px;
  height: 32px;
  line-height: 1.6em;
}

.alliance-toggle-on.is-toggle-on{
  color: #F2E0C2;
  background:url("<%= asset_path 'dialogs/toggle/toggle_on.png' %>") no-repeat left center;
}

.alliance-toggle-off.is-toggle-on{
  color: #735e3b;
  background:url("<%= asset_path 'dialogs/toggle/toggle_off.png' %>") no-repeat left center;
}
.alliance-toggle-on{
  color: #735e3b;
  background:url("<%= asset_path 'dialogs/toggle/toggle_off.png' %>") no-repeat left center;
}

.alliance-toggle-off {
  color: #F2E0C2;
  background:url("<%= asset_path 'dialogs/toggle/toggle_on.png' %>") no-repeat left center;
}

.alliance-description {
  border: none;
  width: 100%;
  height: 115px;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  color: #735e3b;
  font-size: 0.9em;
  resize: none;
}

.alliance-description:focus {
  border: none;
  background-color: white;
  width: 100%;
  height: 115px;
  color: black;
}


/* == Alliance Members Screen == */
.alliance-member-container {
  text-align: center;
}

.alliance-member-container h3 {
  font-size: 0.9em;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
}

.alliance-member-container table {
  margin-left: 15px;
}

.alliance-member-container .membersTable-name {
  padding-left: 20px;
  font-size: 0.9em;
  text-align: left;
  width: 361px;
  height: 40px;
  background:url("<%= asset_path 'dialogs/backgrounds/background_textfield_brown_light_big.png' %>") no-repeat left center;
}

.alliance-member-container .membersTable-name .status-dot {
  float: right;
  margin: 5px 20px;
}

.alliance-member-container .membersTable-button {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: pointer;
  font-size: 0.9em;
  width: 200px;
  height: 40px;
  background:url("<%= asset_path 'dialogs/backgrounds/background_textfield_brown_light_small.png' %>") no-repeat left center;
}

.alliance-member-container .membersTable-button.inactive {
  color: grey;
}

/* == Alliance Diplomacy Screen == */

.alliance-diplomacy-tab {
  height: 100%;
  width: 100%;
}

.alliance-diplomacy-container {
  margin-left: 15px;
}

.alliance-diplomacy-container h3 {
  font-size: 0.9em;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  margin-bottom: 0;
  margin-top: 8px;
}

.alliance-ultimatum-new {
  margin-top: 12px;
  display: block;
  float: left;
}

.alliance-ultimatum-duration {
  text-align: center;
}

.alliance-ultimatum, .alliance-war, .alliance-capitulation {
  display: block;
  float: left;
}

.public-information{
  height: 288px;
  position: absolute;
  margin-top: 70px;
}

.alliance-diplomacy-first {
  width: 208px;
  float: left;
  clear: both;
}

.alliance-diplomacy-second {
  width: 200px;
  float: left;
}

.alliance-diplomacy-third {
  float: right;
  width: 150px;
}

.alliance-ultimatum-new-inputfield {
  width: 175px;
  height: 26px;
  text-align: center;
  border: none;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
  font-size: 0.7em;
}

.alliance-diplomacy-name {
  font-size: 0.9em;
  color: #5b5b5b;
  width: 200px;
  height: 40px;
  padding-left: 10px;
  background: url("<%= asset_path 'dialogs/backgrounds/background_textfield_brown_light_small.png' %>") no-repeat left center;
}

.alliance-diplomacy-timer {
  font-size: 0.9em;
  width: 184px;
  height: 40px;
  color: white;
  text-align: center;
  background: url("<%= asset_path 'dialogs/backgrounds/background_textfield_brown_dark.png' %>") no-repeat left center;
}

.alliance-ultimatum-button {
  padding: 12px 0 0 5px;
  width: 180px;
  height: 52px;
  font-size: 0.6em;
  color: white;
  background: url("<%= asset_path 'dialogs/buttons/button_green_medium.png' %>") no-repeat left top;
  text-align: center;
  cursor: pointer;
}

.alliance-war .alliance-ultimatum-button {
  margin-top: -8px;
  position: absolute;
}

.alliance-diplomacy-title {
  height:50px;
}

.alliance-row {
  height: 55px;
}