/* == ARMY INFO == */
.army-info-count-text-position
{
  left: 6px;
  top: 50px;
}

.army-info-count-text
{
  position: relative;
  color: white;
  font-size: 18px;
  text-align: right;
  line-height: 18px;
  text-shadow:  2px  2px 2px black,
                  2px -2px 2px black,
                 -2px  2px 2px black,
                 -2px -2px 2px black;
}

.button-blue-info-wide-titel{
  color: #FFF;
  text-align: center;
  line-height: 100px;
  font-size: 25px;
}

.army-info-text-grey {
position: relative;
float: left;
display: inline-block;
text-align: center;
color: rgb(146,141,130);
width: auto;
}

.army-stats-info-cell
{
  position: relative;
  display: inline-block;
  float: left;
  width: 100%;
  bottom: 8px;
  height: 52px;
}

.sword-icon.army-info-sword-icon {
  position: relative;
  display: inline-block;
  float: left;
  width: 50%;
  left: 0px;
  top: 0px;
}

.cavalry-icon.army-info-cavalry-icon {
  position: relative;
  display: inline-block;
  float: left;
  width: 50%;
  left: 0px;
  top: 0px;
}

.archer-icon.army-info-archer-icon {
  position: relative;
  display: inline-block;
  float: left;
  width: 50%;
  left: 0px;
  top: 0px;
}

.button-blue-info-wide.army-info-button{
  width: 300px;
  height: 100px;
  position: relative;
  display: inline-block;
  float: left;
  left: 16px;
}

.button-blue-info-wide{
  background:url("<%= asset_path 'dialogs/buttons/button_blue_info_wide.png' %>") no-repeat center center;
  width: 248px;
  height: 52px;
  cursor: pointer;
}

.button-blue-info-wide:hover{
  background:url("<%= asset_path 'dialogs/buttons/button_blue_info_wide_active.png' %>") no-repeat center center;
  cursor: pointer;
}

.button-blue-info-wide:active {
  opacity: 0.7;
  filter: alpha(opacity=70);
}

.modal-dialog-body.modal-dialog-body-info{
  height: 88%;
  width: 100%;
}

.army-info-icon
{
  position: relative;
  float: left;
  width: 70px;
  height: 70px;
  display: inline-block;
}

.army-info-buttons-cell{
  position: relative;
  height: 100px;
  width: 100%;
  display: inline-block;
  float: left;
}

.army-info-state-cell{
  position: relative;
  height: auto;
  width: 100%;
  display: inline-block;
  float: left;
  padding-bottom: 30px;
}
.text-cell-left{
  position: relative;
  display: inline-block;
  float: left;
  width: 46%;
  text-align: right;
  padding-right: 55px;
}

.text-cell-right{
  position: relative;
  display: inline-block;
  float: left;
  width: auto;
  color: rgb(146,141,130);
}

.ap-regen-info{
  font-size: 0.7em;
}

.army-info-icons-cell{
  position: relative;
  height: auto;
  width: 70%;
  display: inline-block;
  float: left;
}

.army-info-attack-stats-cell{
  position: relative;
  height: auto;
  width: 30%;
  display: inline-block;
  float: left;
}