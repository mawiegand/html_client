.ptero {
	width: 128px;
	height: 128px;
	position: fixed;
	top: 10%;
	left: 100%;
	z-index: 10000;
	display: inline-block;
}

.ptero.anim-state-0 {
    background-image: url("<%= asset_path 'extras/ptero/ptero_anim.png' %>");
    background-position: 0px -128px;
    -webkit-animation: play_idle .3s steps(3) infinite;
       -moz-animation: play_idle .3s steps(3) infinite;
        -ms-animation: play_idle .3s steps(3) infinite;
         -o-animation: play_idle .3s steps(3) infinite;
            animation: play_idle .3s steps(3) infinite;
}

@-webkit-keyframes play_idle {
   from { background-position: 0px -128px; }
     to { background-position: -384px -128px; }
}

@-moz-keyframes play_idle {
   from { background-position: 0px -128px; }
     to { background-position: -384px -128px; }
}

@-ms-keyframes play_idle {
   from { background-position: 0px -128px; }
     to { background-position: -384px -128px; }
}

@-o-keyframes play_idle {
   from { background-position: 0px -128px; }
     to { background-position: -384px -128px; }
}

@keyframes play_idle {
   from { background-position: 0px -128px; }
     to { background-position: -384px -128px; }
}


.ptero.anim-state-1 {
    background-image: url("<%= asset_path 'extras/ptero/ptero_anim.png' %>");
    background-position: 0px 0px;
    -webkit-animation: play_fly .4s steps(4) infinite;
       -moz-animation: play_fly .4s steps(4) infinite;
        -ms-animation: play_fly .4s steps(4) infinite;
         -o-animation: play_fly .4s steps(4) infinite;
            animation: play_fly .4s steps(4) infinite;
}

@-webkit-keyframes play_fly {
   from { background-position: 0px 0px; }
     to { background-position: -512px 0px; }
}

@-moz-keyframes play_fly {
   from { background-position: 0px 0px; }
     to { background-position: -512px 0px; }
}

@-ms-keyframes play_fly {
   from { background-position: 0px 0px; }
     to { background-position: -512px 0px; }
}

@-o-keyframes play_fly {
   from { background-position: 0px 0px; }
     to { background-position: -512px 0px; }
}

@keyframes play_fly {
   from { background-position: 0px 0px; }
     to { background-position: -512px 0px; }
}