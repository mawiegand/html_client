}

.profile-tab-view
{
  position: relative;
  top: 28px;
  width: 640px;
}

.description {
  color: rgb(112,92,48);
  font-size: 1.0em;
  padding: 0 20px 0 20px;
  margin: 20px 0 0 0;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
}

.profile-info-self-dialog-pane .row1 {
  margin: 20px 0 20px 0;
}
.profile-info-self-dialog-pane .row2 {
  height: 70px;
}

.profile-info-self-dialog-pane .button {
  width: 184px;
  height: 48px;

  color: rgb(256,256,256);
  font-size: 2em;
  text-align: center;
  line-height: 45px;
  margin: auto;
}

.character-details {
  position: relative;
  float: left;
}

.profile-info-self-dialog-pane .rank {
  background:url("<%= asset_path 'dialogs/buttons/button_blue_wide.png' %>") no-repeat center center;
}

.profile-info-self-dialog-pane .rank:hover {
  cursor: pointer;
}

.profile-info-self-dialog-pane .info {
  background:url("<%= asset_path 'dialogs/buttons/button_orange_wide.png' %>") no-repeat center center;
}

.profile-info-self-dialog-pane .info:hover {
  cursor: pointer;
}

.profile-info-self-dialog-pane .avatar {
  width: 144px;
  height: 152px;
}

.profile-info-self-dialog-pane .line {
  padding: 0 20px 0 20px;
  text-align: center;
}

.profile-info-self-dialog-pane .line1 {
  color: rgb(112,92,48);
  font-size: 1.3em;
}

.profile-info-self-dialog-pane .line2 {
  color: rgb(53,118,178);
  font-size: 2em;
}

.profile-info-self-dialog-pane .line1 div,
.profile-info-self-dialog-pane .line2 div {
  display: inline-block;
  height: 65px;
}

.profile-info-self-dialog-pane .clubs-value,
.profile-info-self-dialog-pane .guy-value,
.profile-info-self-dialog-pane .thing-value,
.profile-info-self-dialog-pane .thumb-up-value,
.profile-info-self-dialog-pane .thumb-down-value {
  display: inline-block;
  line-height: 10px;
  vertical-align: middle;
}

.profile-info-self-dialog-pane .thumb-up,
.profile-info-self-dialog-pane .thumb-down {
  margin: 0 20px 0 20px;
}

.profile-info-self-dialog-pane .clubs-icon {
  width: 48px;
  /*height: 40px;*/
  background:url("<%= asset_path 'dialogs/specials/army_identifier.png' %>") no-repeat center center;
  display: inline-block;
}

.profile-info-self-dialog-pane .guy-icon {
  width: 48px;
  /*height: 56px;*/
  background:url("<%= asset_path 'dialogs/specials/people_identifier.png' %>") no-repeat center center;
  display: inline-block;
}

.profile-info-self-dialog-pane .thing-icon {
  width: 64px;
  /*height: 56px;*/
  background:url("<%= asset_path 'dialogs/specials/fortress_identifier.png' %>") no-repeat center center;
  display: inline-block;
}

.profile-info-self-dialog-pane .thumb-up-icon {
  width: 40px;
  /*height: 40px;*/
  background:url("<%= asset_path 'dialogs/specials/thumbs_up_blue.png' %>") no-repeat center 2px;
  display: inline-block;
}

.profile-info-self-dialog-pane .thumb-down-icon {
  width: 40px;
  /*height: 40px;*/
  background:url("<%= asset_path 'dialogs/specials/thumbs_down_blue.png' %>") no-repeat center 18px;
  display: inline-block;
}

/* == PROFILE RANK SELF == */

.xp {
  background:url("<%= asset_path 'dialogs/items/normal/item_xp.png' %>") no-repeat left center;
}

.resource-icon-xp
{
  width: 32px;
  height: 32px;
}

.profile-rank-self-dialog-pane .row1 {
  margin: 20px 0 20px 0;
}
.profile-rank-self-dialog-pane .row3 {
  height: 48px;
  margin: 20px 0 20px 0;
 }

.profile-rank-self-dialog-pane .button {
  width: 184px;
  height: 48px;

  color: rgb(256,256,256);
  font-size: 2em;
  text-align: center;
  line-height: 45px;
  margin: auto;
}

.current-rank,
.next-rank,
.current-level,
.next-level {
  padding: 0 20px 0 20px;
  font-size: 0.8em;
}

.current-rank-title,
.next-rank-title {
  color: rgb(112,92,48);
}

.current-rank-value,
.next-rank-value {
  color: rgb(154,148,138);
}

.current-level-title,
.next-level-title {
  color: rgb(112,92,48);
  line-height: 2em;
  vertical-align: top;
}

.current-level-value,
.next-level-value {
  color: rgb(154,148,138);
  line-height: 2em;
  vertical-align: top;
}

.current-level div,
.next-level div {
  display: inline-block;
}

.rank-background {
  background:url("<%= asset_path 'dialogs/progressbars/progress_domination_grey.png' %>") no-repeat center center;
}

.rank-bar {
  width: 560px;
  height: 48px;
  background:url("<%= asset_path 'dialogs/progressbars/progress_domination_green.png' %>") no-repeat left center;
  background-size: 80% 100%;
  text-align: center;
  margin:auto;
}

.progress-value {
  color: rgb(256,256,256);
  line-height: 1.9em;
  font-size: 1.0em;
}

