/* == PROFILE INFO SELF == */

.description-change-button
{
  position: absolute;
  left: 400px;
  top: 470px;
  line-height: 50px;
  font-size: 14px;
}

.description-text-area/* input[type="text"] */{
  position: absolute;
  top: 208px;
  height: 100px;
  font-size: 20px;
  width: 588px;
  margin-right: 0px!important;
  border: 0!important;
  border-radius: 0!important;
  font-family: 'hvd_comic_serif_proregular', 'cursive'!important;
  padding: 2px!important;
