}

.item.resource_xp.small {
  width: 32px;
  height: 24px;
  background: url("<%= asset_path 'dialogs/items/normal/item_xp.png' %>") no-repeat center center;
}

.item.resource_stone.xs {
  width: 16px;
  height: 12px;
  background: url("<%= asset_path 'dialogs/items/normal/item_stone_xs.png' %>") no-repeat center center;
}

.item.resource_wood.xs {
  width: 16px;
  height: 12px;
  background: url("<%= asset_path 'dialogs/items/normal/item_wood_xs.png' %>") no-repeat center center;
