  position: absolute;
  left: -30%;
  bottom: -13%;
}

/* == Building Details == */
.building-info-image {
  float: left;
}

.building-details {
  position: relative;
}

.economy-details, .military-details{
  position: relative;
  float: left;
  width: 50%;
  height: 75%;
}

.economy-details.is-single-military-row{
  display: none;
}

.military-details.is-single-economy-row {
  display: none;
}

.economy-details.is-single-economy-row{
  width: 100%;
  text-align: center;
}

.military-details.is-single-military-row {
  width: 100%;
  text-align: center;
}

.unlock-details, .building-requirements {
  position: relative;
  width: 100%;
  margin-left: 20px;
  margin-bottom: 5px;
}

.queue_infantry {
