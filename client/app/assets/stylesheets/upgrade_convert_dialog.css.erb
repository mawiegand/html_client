/* == Upgrade Building == */
.upgrade-container {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;
  cursor: default;
}

.upgrade-container h3 {
  display: inline-block;
  position: relative;
  margin-top: 0;
  -webkit-margin-after: 0;
  font-size: 1.1em;
  font-family: 'hvd_comic_serif_proregular', 'cursive';
}

.upgrade-container .collumn{
  text-align: center;
  float: left;
  width: 33%;
  height: 400px;
}

.upgrade-container .row-first-half {
  width: 100%;
  height: 50%;
  position: relative;
}

.upgrade-container .row-second-half {
  width: 100%;
  height: 50%;
}

.cell-header {
  margin-top: 5px;
  position: relative;
  width: 100%;
  height: 40px;
  display: block;
}

.cell-body {
  height: 156px;
  font-size: 20px;
}

.level-title {
  position: absolute !important;
  left: 20%;
}

.upgrade-arrow {
  background: url("<%= asset_path 'dialogs/specials/arrow_right_wide.png' %>") no-repeat center center;
}

.change-level {
  top: 10%;
  position: absolute;
}

.change-level.right {
  width: 24px;
  height: 32px;
  background: url("<%= asset_path 'dialogs/specials/arrow_right.png' %>") no-repeat center center;
  right: 5%;
}

.change-level.left {
  width: 24px;
  height: 32px;
  background: url("<%= asset_path 'dialogs/specials/arrow_left.png' %>") no-repeat center center;
  left: 5%;
}

.upgrade-button {
  color: white;
  display: inline-block;
  cursor: pointer;
  width: 180px;
  height: 200px;
  background: url("<%= asset_path 'dialogs/buttons/button_green_high.png' %>") no-repeat center center;
}

.upgrade-button-disable{
  color: white;
  display: inline-block;
  width: 180px;
  height: 200px;
  background: url("<%= asset_path 'dialogs/buttons/button_grey_high.png' %>") no-repeat center center;
}

.resources-table {
  display: inline-block;
}

.resources-table tr{
  line-height: 30px;
}

.item.resource_stone.small {
  width: 32px;
  height: 24px;
  background: url("<%= asset_path 'dialogs/items/normal/item_stone_small.png' %>") no-repeat center center;
}

.item.resource_wood.small {
  width: 32px;
  height: 24px;
  background: url("<%= asset_path 'dialogs/items/normal/item_wood_small.png' %>") no-repeat center center;
}

.item.resource_fur.small {
